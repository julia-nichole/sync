    <form id="new-form" action="/symptoms" method="POST">
        <label> Mood:  </label>
        <select class="browser-default" name="mood">
                <option  value="happy">Happy!</option>
                <option  value="sad"> Sad</option>
                <option  value="sensitive">Sensitive</option>
                <option  value="irritable">Irritable</option>
        </select >
	
        <label> Skin:  </label>
        <select class="browser-default" name="skin">
                <option  value="great">Great!</option>
                <option  value="break-outs">Break Outs</option>
                <option  value="oily">Oily</option>
                <option  value="dry">Dry</option>
        </select >
         
    <label> Sexual activity:  </label>
          <select class="browser-default" name="sexualActivity">
                  <option  value="protected">Protected</option>
                  <option  value="unprotected">Unprotected</option>
                  <option  value="none">None</option>
 
          </select >
         
    <label>Pain level 1-5 </label>
        <select class="browser-default" name="pain">
                <option  value="1">1</option>
                <option  value="2">2</option>
                <option  value="3">3</option>
                <option  value="4">4</option>
                <option  value="5">5</option>
        </select>
          <div>
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                            
                </button>
                                
              </div>
                  </form>